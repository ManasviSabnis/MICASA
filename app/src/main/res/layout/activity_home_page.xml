<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D5B79F"
    android:orientation="vertical"
    tools:context=".HomePage">

    <TextView
        android:id="@+id/tv1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingTop="20dp"
        android:text="Find the"
        android:textSize="36sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingBottom="30dp"
        android:text="Best Furniture"
        android:textSize="36sp"
        android:textStyle="bold" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
        android:columnCount="3"
        android:rowCount="5">

        <ImageView
            android:id="@+id/iv1"
            android:layout_width="124dp"
            android:layout_height="124dp"
            android:layout_margin="4sp"
            app:srcCompat="@drawable/table" />

        <ImageView
            android:id="@+id/iv2"
            android:layout_width="124dp"
            android:layout_height="124dp"
            android:layout_margin="4sp"
            app:srcCompat="@drawable/bookshelf" />

        <ImageView
            android:id="@+id/iv3"
            android:layout_width="124dp"
            android:layout_height="124dp"
            android:layout_margin="4sp"
            app:srcCompat="@drawable/lamp" />

        <ImageView
            android:id="@+id/iv4"
            android:layout_width="124dp"
            android:layout_height="124dp"
            android:layout_margin="4sp"
            android:background="#fff"
            android:cropToPadding="false"
            app:srcCompat="@drawable/odltv" />

        <ImageView
            android:id="@+id/iv5"
            android:layout_width="124dp"
            android:layout_height="124dp"
            android:layout_margin="4sp"
            android:background="#fff"
            app:srcCompat="@drawable/clothdryer" />

        <ImageView
            android:id="@+id/iv6"
            android:layout_width="124dp"
            android:layout_height="124dp"
            android:layout_margin="4sp"
            android:background="#fff"
            app:srcCompat="@drawable/chair" />

    </GridLayout>

    <Button
        android:id="@+id/btnTest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="20dp"
        android:background="#D1A394"
        android:backgroundTint="#5A2A2A"
        android:textColor="#F4EFEF"
        android:text="Test"
        app:strokeColor="#FFFFFF" />

</LinearLayout>